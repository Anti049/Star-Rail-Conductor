@tailwind base;
@tailwind components;
@tailwind utilities;

html,
body {
	@apply h-full overflow-hidden;
}

@layer base {
	@font-face {
		font-family: 'Star Rail';
		src: local('Star Rail'), url('/fonts/Star-Rail-Regular.ttf');
		font-weight: normal;
		font-display: swap;
	}
}

@layer base {
	* {
		@apply border-border;
	}
	body {
		@apply bg-background text-foreground;
	}
}
